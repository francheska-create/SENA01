@model ControlAsistencia.Models.Programa
@{
    ViewData["Title"] = "Editar programa de Formacion";
}

<h1>Editar Programa de Formacion</h1>

<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-controller="Programa" asp-action="Edit">
            <input type="hidden" asp-for="ProgramaId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-group" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
              <div class="form-group">
                <label asp-for="Version" class="control-label"> </label>
                <input asp-for="Version" class="form-group" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <br />
              <div class="form-group">
                <label asp-for="Codigo" class="control-label"> </label>
                <input asp-for="Codigo" class="form-group" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
  <br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}