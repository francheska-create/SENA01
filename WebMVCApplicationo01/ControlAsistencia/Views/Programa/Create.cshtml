@model ControlAsistencia.Models.Programa

@{
    ViewData["Title"] = "Crear programa";

}
<h1>Crear Program de Formacion</h1>
<br>
<div class="row">

    <div class="col-md-5">
        <form asp-controller="Programa" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-group" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Version" class="control-label"> </label>
                <input asp-for="Version" class="form-group" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"> </label>
                <input asp-for="Codigo" class="form-group" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Crear Programa" class="btn btn-primary" />
            </div>
        </form>


    </div>
    
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); } 
 }